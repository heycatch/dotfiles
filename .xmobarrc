Config { font = "xft:Inconsolata:size=8"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , border = NoBorder
       , borderColor = "grey"
       , lowerOnStart = True
       , commands = [ Run Battery ["-t","<left>% ","-L","25","-H","75","-h","green","-n","yellow","-l","red"] 10
                    , Run Date "%a %b%_d %Y %H:%M" "date" 10
                    , Run StdinReader
                    , Run Kbd [("us", "US"), ("ru", "RU")]
                    , Run Wireless "wlp3s0b1" [ "-t", "<essid>" ] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=#ee9a00>%date%</fc> <fc=#ff0000>%kbd%</fc> | %battery%| <fc=#ee9a00>Wifi:%wlp3s0b1wi%</fc>"
       }

